{
  "name": "mishka",
  "version": "13.0.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "autoprefixer": "9.4.x",
    "browser-sync": "2.26.x",
    "gulp": "4.0.x",
    "gulp-less": "4.0.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-csso": "3.0.x",
    "gulp-svgstore": "7.0.x",
    "gulp-imagemin": "5.0.x",
    "gulp-webp": "3.0.x",
    "gulp-uglify": "3.0.x",
    "gulp-rename": "1.4.x",
    "gulp-posthtml": "3.0.x",
    "gulp-htmlmin": "5.0.x",
    "posthtml-include": "1.2.x",
    "vinyl-paths": "2.1.x",
    "run-sequence": "2.2.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "9.9.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint 'source/less/**/*.less' --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "npm run build && gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.9"
  }
}
